{
    "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
    "rules": {
      "no-console": false,
      "no-shadowed-variable": false,
      "jsx-no-lambda": false,
      "no-shadow": [
        "error",
        {"builtinGlobals": false, "hoist": "all", "allow": []}
      ],
      "ordered-imports": false
    },
    "linterOptions": {
      "exclude": [
        "config/**/*.js",
        "node_modules/**/*.ts",
        "coverage/lcov-report/*.js"
      ]
    }
  }
  